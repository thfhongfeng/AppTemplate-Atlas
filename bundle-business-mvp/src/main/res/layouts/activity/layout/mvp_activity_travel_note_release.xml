<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/mvp_note_release_title_label"
                        android:textColor="#ff989898"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="#fff3f3f3"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#929292"
                        android:textSize="@dimen/sp_15" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/mvp_note_release_set_out_date_label"
                        android:textColor="#ff989898"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/set_out_date_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:background="#fff3f3f3">

                        <TextView
                            android:id="@+id/set_out_date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:src="@mipmap/base_ic_date_select" />
                    </RelativeLayout>

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/mvp_note_release_day_count_label"
                        android:textColor="#ff989898"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/day_count_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:background="#fff3f3f3">

                        <TextView
                            android:id="@+id/day_count_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="@string/unit_day2"
                            android:textColor="#C9C9C9"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/mvp_note_release_belong_shops_label"
                        android:textColor="#ff989898"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/belong_shop_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff3f3f3"
                        android:minHeight="@dimen/dp_40">

                        <TextView
                            android:id="@+id/belong_shop_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/base_ic_solid_down" />
                    </RelativeLayout>

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_2"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/mvp_note_release_preface_label"
                    android:textColor="#992328"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <EditText
                android:id="@+id/preface_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#fff3f3f3"
                android:gravity="top|left"
                android:lines="5"
                android:maxLength="500"
                android:padding="@dimen/dp_10"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13" />

            <com.pine.mvp.widget.view.MvpNoteEditorView
                android:id="@+id/mnev_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.pine.mvp.widget.view.MvpNoteEditorView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
